---
import Layout from '../layouts/Layout.astro';
import { CATEGORY_INFO } from '../content/config';
import SubNav from '../components/SubNav.astro';
import codeProjectsData from '../data/code-projects.json';

// Sort projects: active first, then planned, then done
const statusOrder = { active: 0, planned: 1, done: 2 };
const sortedProjects = [...codeProjectsData.projects].sort(
  (a, b) => statusOrder[a.status] - statusOrder[b.status]
);

// Group projects by category for section display
const categories = ['Mobile Apps', 'Websites', 'Client Work', 'AI/ML'] as const;
const projectsByCategory = Object.fromEntries(
  categories.map(cat => [cat, sortedProjects.filter(p => p.category === cat)])
);
---

<Layout title="Code Projects - StaubRacing">
  <SubNav slot="subnav" section="code" currentPath="/code" />

  <section class="section-card" style={`--category-color: ${CATEGORY_INFO.code.color}`}>
    <header class="section-header">
      <span class="category-pill">{CATEGORY_INFO.code.emoji} {CATEGORY_INFO.code.title}</span>
      <h1>Projects</h1>
      <p>What I'm building, planning, and have completed.</p>
    </header>

    <section class="projects-section">
      {categories.map(category => projectsByCategory[category].length > 0 && (
        <div class="category-group">
          <h3 class="category-heading">{category}</h3>
          <div class="projects-grid">
            {projectsByCategory[category].map((project: any) => (
              <article class={`project-card status-${project.status}`}>
                <header class="project-header">
                  <h4>{project.name}</h4>
                  <span class={`status-badge ${project.status}`}>
                    {project.status === 'active' && 'ðŸ”„'}
                    {project.status === 'planned' && 'ðŸ“‹'}
                    {project.status === 'done' && 'âœ“'}
                    {project.status}
                  </span>
                </header>
                <p class="project-description">{project.description}</p>
                {project.tech && project.tech.length > 0 && (
                  <div class="tech-tags">
                    {project.tech.map((t: string) => <span class="tech-tag">{t}</span>)}
                  </div>
                )}
                {project.link && (
                  <a href={project.link} class="project-link" target="_blank" rel="noopener noreferrer">
                    View Project â†’
                  </a>
                )}
              </article>
            ))}
          </div>
        </div>
      ))}
    </section>
  </section>
</Layout>

<style>
  .section-card {
    display: grid;
    gap: 1.75rem;
    padding: clamp(1.75rem, 2.5vw, 2.75rem);
    background: var(--surface-solid);
    border-radius: var(--radius-lg);
    border: 1px solid var(--surface-border);
    box-shadow: var(--shadow-soft);
    backdrop-filter: blur(16px);
  }

  .section-header {
    display: grid;
    gap: 0.8rem;
    text-align: center;
  }

  .section-header h1 {
    font-size: clamp(2.3rem, 5vw, 3.1rem);
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  .section-header p {
    margin: 0;
    color: var(--text-secondary);
  }

  .section-header .category-pill {
    justify-self: center;
  }

  .projects-section {
    display: grid;
    gap: 1rem;
  }

  .category-group {
    display: grid;
    gap: 1rem;
  }

  .category-heading {
    margin: 0;
    font-size: 1rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--text-secondary);
    padding-bottom: 0.5rem;
    border-bottom: 1px dashed var(--surface-border);
  }

  .projects-grid {
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  .project-card {
    display: grid;
    gap: 0.75rem;
    padding: 1.25rem;
    border-radius: var(--radius-md);
    border: 1px solid var(--surface-border);
    background: var(--surface-solid);
    transition: border 0.2s ease, transform 0.2s ease, box-shadow 0.2s ease;
  }

  .project-card:hover {
    border-color: color-mix(in srgb, var(--accent-electric) 40%, var(--surface-border));
    transform: translateY(-1px);
    box-shadow: var(--shadow-soft);
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .project-header h4 {
    margin: 0;
    font-size: 1.15rem;
    color: var(--text-primary);
  }

  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.25rem 0.65rem;
    border-radius: 999px;
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .status-badge.active {
    background: color-mix(in srgb, var(--accent-lime) 20%, transparent);
    border: 1px solid color-mix(in srgb, var(--accent-lime) 50%, transparent);
    color: var(--accent-lime);
  }

  .status-badge.planned {
    background: color-mix(in srgb, var(--accent-amber) 20%, transparent);
    border: 1px solid color-mix(in srgb, var(--accent-amber) 50%, transparent);
    color: var(--accent-amber);
  }

  .status-badge.done {
    background: color-mix(in srgb, var(--text-secondary) 20%, transparent);
    border: 1px solid color-mix(in srgb, var(--text-secondary) 40%, transparent);
    color: var(--text-secondary);
  }

  .project-description {
    margin: 0;
    font-size: 0.9rem;
    color: var(--text-secondary);
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--accent-electric);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .project-link:hover {
    color: color-mix(in srgb, var(--accent-electric) 80%, white);
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .tech-tag {
    display: inline-block;
    padding: 0.2rem 0.5rem;
    font-size: 0.7rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    background: color-mix(in srgb, var(--text-secondary) 10%, transparent);
    border: 1px solid color-mix(in srgb, var(--text-secondary) 25%, transparent);
    border-radius: var(--radius-sm);
    color: var(--text-secondary);
  }
</style>
