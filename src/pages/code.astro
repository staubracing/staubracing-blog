---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { CATEGORY_INFO } from '../content/config';
import codeProjectsData from '../data/code-projects.json';

const posts = await getCollection('blog', (post) =>
  post.data.category === 'code' && !post.data.draft
);
const sortedPosts = posts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

// Sort projects: active first, then planned, then done
const statusOrder = { active: 0, planned: 1, done: 2 };
const sortedProjects = [...codeProjectsData.projects].sort(
  (a, b) => statusOrder[a.status] - statusOrder[b.status]
);
---

<Layout title="Code - StaubRacing">
  <section class="section-card" style={`--category-color: ${CATEGORY_INFO.code.color}`}>
    <header class="section-header">
      <span class="category-pill">{CATEGORY_INFO.code.emoji} {CATEGORY_INFO.code.title}</span>
      <h1>Code</h1>
      <p>{CATEGORY_INFO.code.description}</p>
    </header>

    <section class="projects-section">
      <h2>Active Projects</h2>
      <p class="section-intro">What I'm building, planning, and have completed.</p>

      <div class="projects-grid">
        {sortedProjects.map(project => (
          <article class={`project-card status-${project.status}`}>
            <header class="project-header">
              <h3>{project.name}</h3>
              <span class={`status-badge ${project.status}`}>
                {project.status === 'active' && 'ðŸ”„'}
                {project.status === 'planned' && 'ðŸ“‹'}
                {project.status === 'done' && 'âœ“'}
                {project.status}
              </span>
            </header>
            <p class="project-description">{project.description}</p>
            {project.link && (
              <a href={project.link} class="project-link" target="_blank" rel="noopener noreferrer">
                View Project â†’
              </a>
            )}
          </article>
        ))}
      </div>
    </section>

    <section class="posts-section">
      <h2>Code Posts</h2>
      {sortedPosts.length > 0 ? (
      <div class="posts-grid">
        {sortedPosts.map(post => (
          <article class="post-card">
            <header>
              <h2><a href={`/blog/${post.slug}`}>{post.data.title}</a></h2>
              <time>{post.data.date.toLocaleDateString()}</time>
            </header>
            {post.data.description && <p>{post.data.description}</p>}
            {post.data.tags.length > 0 && (
              <ul class="tag-list">
                {post.data.tags.map(tag => <li>{tag}</li>)}
              </ul>
            )}
          </article>
        ))}
      </div>
    ) : (
      <p class="empty-state">No code posts yet. Tutorials, app development, and dev tools coming soon.</p>
    )}
    </section>
  </section>
</Layout>

<style>
  .section-card {
    display: grid;
    gap: 1.75rem;
    padding: clamp(1.75rem, 2.5vw, 2.75rem);
    background: var(--surface-solid);
    border-radius: var(--radius-lg);
    border: 1px solid var(--surface-border);
    box-shadow: var(--shadow-soft);
    backdrop-filter: blur(16px);
  }

  .section-header {
    display: grid;
    gap: 0.8rem;
    text-align: center;
  }

  .section-header h1 {
    font-size: clamp(2.3rem, 5vw, 3.1rem);
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  .section-header p {
    margin: 0;
    color: var(--text-secondary);
  }

  .section-header .category-pill {
    justify-self: center;
  }

  .projects-section,
  .posts-section {
    display: grid;
    gap: 1rem;
  }

  .projects-section h2,
  .posts-section h2 {
    margin: 0;
    font-size: 1.5rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--surface-border);
    position: relative;
  }

  .projects-section h2::after,
  .posts-section h2::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 60px;
    height: 2px;
    background: var(--accent-electric);
    border-radius: 1px;
  }

  .section-intro {
    margin: 0;
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  .projects-grid {
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  .project-card {
    display: grid;
    gap: 0.75rem;
    padding: 1.25rem;
    border-radius: var(--radius-md);
    border: 1px solid var(--surface-border);
    background: var(--surface-solid);
    transition: border 0.2s ease, transform 0.2s ease, box-shadow 0.2s ease;
  }

  .project-card:hover {
    border-color: color-mix(in srgb, var(--accent-electric) 40%, var(--surface-border));
    transform: translateY(-1px);
    box-shadow: var(--shadow-soft);
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .project-header h3 {
    margin: 0;
    font-size: 1.15rem;
    color: var(--text-primary);
  }

  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.25rem 0.65rem;
    border-radius: 999px;
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .status-badge.active {
    background: color-mix(in srgb, var(--accent-lime) 20%, transparent);
    border: 1px solid color-mix(in srgb, var(--accent-lime) 50%, transparent);
    color: var(--accent-lime);
  }

  .status-badge.planned {
    background: color-mix(in srgb, var(--accent-amber) 20%, transparent);
    border: 1px solid color-mix(in srgb, var(--accent-amber) 50%, transparent);
    color: var(--accent-amber);
  }

  .status-badge.done {
    background: color-mix(in srgb, var(--text-secondary) 20%, transparent);
    border: 1px solid color-mix(in srgb, var(--text-secondary) 40%, transparent);
    color: var(--text-secondary);
  }

  .project-description {
    margin: 0;
    font-size: 0.9rem;
    color: var(--text-secondary);
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--accent-electric);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .project-link:hover {
    color: color-mix(in srgb, var(--accent-electric) 80%, white);
  }

  .posts-grid {
    display: grid;
    gap: 1.25rem;
  }

  .post-card {
    display: grid;
    gap: 0.75rem;
    padding: 1.35rem 1.5rem;
    border-radius: var(--radius-md);
    border: 1px solid var(--surface-border);
    background: var(--surface-solid);
    transition: border 0.2s ease, transform 0.2s ease, box-shadow 0.2s ease;
  }

  .post-card:hover,
  .post-card:focus-within {
    border-color: color-mix(in srgb, var(--category-color) 40%, var(--surface-border));
    transform: translateY(-1px);
    box-shadow: var(--shadow-soft);
  }

  .post-card header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .post-card h2 {
    margin: 0;
    font-size: 1.3rem;
  }

  .post-card time {
    font-size: 0.8rem;
    color: var(--text-secondary);
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  .post-card p {
    margin: 0;
  }

  .empty-state {
    margin: 0;
    text-align: center;
    color: var(--text-secondary);
    padding: 2rem;
  }

  @media (max-width: 768px) {
    .post-card {
      padding: 1.2rem 1.25rem;
    }

    .post-card header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
