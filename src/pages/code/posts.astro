---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { CATEGORY_INFO } from '../../content/config';
import SubNav from '../../components/SubNav.astro';

const posts = await getCollection('blog', (post) =>
  post.data.category === 'code' && !post.data.draft
);
const sortedPosts = posts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title="Code Posts - StaubRacing">
  <SubNav slot="subnav" section="code" currentPath="/code/posts" />

  <section class="section-card" style={`--category-color: ${CATEGORY_INFO.code.color}`}>
    <header class="section-header">
      <h1>Code Posts</h1>
      <p>Tutorials, app development, and dev tools</p>
    </header>

    {sortedPosts.length > 0 ? (
      <div class="posts-grid">
        {sortedPosts.map(post => (
          <article class="post-card">
            <header>
              <h2><a href={`/blog/${post.slug}`}>{post.data.title}</a></h2>
              <time>{post.data.date.toLocaleDateString()}</time>
            </header>
            {post.data.description && <p>{post.data.description}</p>}
            {post.data.tags.length > 0 && (
              <ul class="tag-list">
                {post.data.tags.map(tag => <li>{tag}</li>)}
              </ul>
            )}
          </article>
        ))}
      </div>
    ) : (
      <p class="empty-state">No code posts yet. Tutorials, app development, and dev tools coming soon.</p>
    )}
  </section>
</Layout>

<style>
  .section-card {
    display: grid;
    gap: 1.75rem;
    padding: clamp(1.75rem, 2.5vw, 2.75rem);
    background: var(--surface-solid);
    border-radius: var(--radius-lg);
    border: 1px solid var(--surface-border);
    box-shadow: var(--shadow-soft);
    backdrop-filter: blur(16px);
  }

  .section-header {
    display: grid;
    gap: 0.8rem;
    text-align: center;
  }

  .section-header h1 {
    font-size: clamp(2.3rem, 5vw, 3.1rem);
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  .section-header p {
    margin: 0;
    color: var(--text-secondary);
  }

  .posts-grid {
    display: grid;
    gap: 1.25rem;
  }

  .post-card {
    display: grid;
    gap: 0.75rem;
    padding: 1.35rem 1.5rem;
    border-radius: var(--radius-md);
    border: 1px solid var(--surface-border);
    background: var(--surface-solid);
    transition: border 0.2s ease, transform 0.2s ease, box-shadow 0.2s ease;
  }

  .post-card:hover,
  .post-card:focus-within {
    border-color: color-mix(in srgb, var(--category-color) 40%, var(--surface-border));
    transform: translateY(-1px);
    box-shadow: var(--shadow-soft);
  }

  .post-card header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .post-card h2 {
    margin: 0;
    font-size: 1.3rem;
  }

  .post-card time {
    font-size: 0.8rem;
    color: var(--text-secondary);
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  .post-card p {
    margin: 0;
  }

  .empty-state {
    margin: 0;
    text-align: center;
    color: var(--text-secondary);
    padding: 2rem;
  }

  @media (max-width: 768px) {
    .post-card {
      padding: 1.2rem 1.25rem;
    }

    .post-card header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
