---
import Layout from '../layouts/Layout.astro';
import SubNav from '../components/SubNav.astro';
import {
  mockEvents,
  formatDateRange,
  getEventsByMonth,
  type CalendarEvent
} from '../data/mock-events';

// TODO: Replace with Google Calendar API fetch when API key is configured
// const API_KEY = import.meta.env.GOOGLE_CALENDAR_API_KEY;
// const response = await fetch(`https://www.googleapis.com/calendar/v3/calendars/${CALENDAR_ID}/events...`);
const events = mockEvents;
const eventsByMonth = getEventsByMonth(events);

// Event type styling config
const eventTypeConfig = {
  race: {
    icon: 'üèÅ',
    label: 'Race Weekend',
    class: 'event-race',
  },
  trackday: {
    icon: 'üîß',
    label: 'Track Day',
    class: 'event-trackday',
  },
  test: {
    icon: '‚öôÔ∏è',
    label: 'Test Day',
    class: 'event-test',
  },
};
---

<Layout title="2025 Race Schedule | StaubRacing">
  <SubNav slot="subnav" section="racing" currentPath="/calendar" />

  <section class="calendar-section">
    <header class="section-header">
      <h1>2025 Race Schedule</h1>
      <p>Where Staub Racing will be competing this season. Click any event for details.</p>
    </header>

    <!-- Event List -->
    <div class="events-container">
      {Array.from(eventsByMonth.entries()).map(([month, monthEvents]) => (
        <div class="month-group">
          <h2 class="month-header">{month}</h2>
          <div class="events-list">
            {monthEvents.map((event: CalendarEvent) => {
              const config = eventTypeConfig[event.type];
              return (
                <article class:list={['event-card', config.class]}>
                  <div class="event-date">
                    <span class="date-range">{formatDateRange(event.start, event.end)}</span>
                    {event.org && <span class="event-org">{event.org}</span>}
                  </div>
                  <div class="event-details">
                    <h3 class="event-title">
                      <span class="event-icon">{config.icon}</span>
                      {event.title}
                    </h3>
                    <p class="event-location">
                      <span class="location-icon">üìç</span>
                      {event.location}
                    </p>
                    {event.description && (
                      <p class="event-description">{event.description}</p>
                    )}
                  </div>
                  <div class="event-type-badge">
                    {config.label}
                  </div>
                </article>
              );
            })}
          </div>
        </div>
      ))}
    </div>

    <!-- Action Buttons -->
    <div class="calendar-actions">
      <button id="toggle-calendar" class="action-btn primary">
        <span class="btn-icon">üìÖ</span>
        <span class="btn-text">View Full Calendar</span>
      </button>
      <a
        href="https://calendar.google.com/calendar/render?cid=2ee5866170c9db9ff52e5c925cb4d49281e3b1efff7a28d50f1677ffe12d975b%40group.calendar.google.com"
        target="_blank"
        rel="noopener noreferrer"
        class="action-btn secondary"
      >
        <span class="btn-icon">üîî</span>
        <span class="btn-text">Subscribe</span>
      </a>
    </div>

    <!-- Full Calendar (hidden by default) -->
    <div id="full-calendar" class="calendar-wrapper hidden">
      <iframe
        src="https://calendar.google.com/calendar/embed?src=2ee5866170c9db9ff52e5c925cb4d49281e3b1efff7a28d50f1677ffe12d975b%40group.calendar.google.com&ctz=America%2FChicago"
        style="border: 0"
        width="800"
        height="600"
        frameborder="0"
        scrolling="no"
        title="Staub Racing 2025 Season"
        loading="lazy"
      ></iframe>
    </div>
  </section>
</Layout>

<style>
  .calendar-section {
    display: grid;
    gap: 1.75rem;
    padding: clamp(1.75rem, 2.5vw, 2.75rem);
    background: var(--surface-solid);
    border-radius: var(--radius-lg);
    border: 1px solid var(--surface-border);
    box-shadow: var(--shadow-soft);
    backdrop-filter: blur(16px);
  }

  .section-header {
    display: grid;
    gap: 0.8rem;
    text-align: center;
  }

  .section-header h1 {
    font-size: clamp(2.3rem, 5vw, 3.1rem);
    letter-spacing: 0.08em;
    text-transform: uppercase;
    margin: 0;
  }

  .section-header p {
    margin: 0;
    color: var(--text-secondary);
  }

  /* Month Groups */
  .month-group {
    display: grid;
    gap: 0.75rem;
  }

  .month-header {
    font-size: 0.85rem;
    font-weight: 700;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--accent-lime);
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--surface-border);
    margin: 0;
  }

  /* Events List */
  .events-list {
    display: grid;
    gap: 0.75rem;
  }

  /* Event Card */
  .event-card {
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: 1rem;
    align-items: start;
    padding: 1rem 1.25rem;
    background: var(--surface-soft);
    border-radius: var(--radius-md);
    border: 1px solid var(--surface-border);
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .event-card:hover {
    background: var(--overlay-base-medium);
    border-color: color-mix(in srgb, var(--accent-racing) 30%, var(--surface-border));
    transform: translateX(4px);
  }

  /* Event Date Column */
  .event-date {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    min-width: 100px;
  }

  .date-range {
    font-family: var(--brand-font);
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    white-space: nowrap;
  }

  .event-org {
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--text-secondary);
    padding: 0.15rem 0.4rem;
    background: var(--overlay-base-light);
    border-radius: var(--radius-sm);
    width: fit-content;
  }

  /* Event Details */
  .event-details {
    display: grid;
    gap: 0.35rem;
  }

  .event-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.05rem;
    font-weight: 600;
    margin: 0;
    color: var(--text-primary);
  }

  .event-icon {
    font-size: 1rem;
    line-height: 1;
  }

  .event-location {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    margin: 0;
    font-size: 0.85rem;
    color: var(--text-secondary);
  }

  .location-icon {
    font-size: 0.75rem;
    line-height: 1;
    opacity: 0.8;
  }

  .event-description {
    margin: 0;
    font-size: 0.8rem;
    color: var(--text-secondary);
    opacity: 0.8;
  }

  /* Event Type Badge */
  .event-type-badge {
    font-size: 0.65rem;
    font-weight: 600;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    padding: 0.35rem 0.65rem;
    border-radius: 999px;
    white-space: nowrap;
    align-self: start;
  }

  /* Race Weekend styling */
  .event-race .event-type-badge {
    color: var(--accent-lime);
    background: color-mix(in srgb, var(--accent-racing) 15%, transparent);
  }

  .event-race:hover {
    border-color: color-mix(in srgb, var(--accent-racing) 40%, var(--surface-border));
  }

  /* Track Day styling */
  .event-trackday .event-type-badge {
    color: var(--accent-electric);
    background: color-mix(in srgb, var(--accent-electric) 15%, transparent);
  }

  .event-trackday:hover {
    border-color: color-mix(in srgb, var(--accent-electric) 40%, var(--surface-border));
  }

  /* Test Day styling */
  .event-test .event-type-badge {
    color: var(--accent-amber);
    background: color-mix(in srgb, var(--accent-amber) 15%, transparent);
  }

  /* Action Buttons */
  .calendar-actions {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    justify-content: center;
    padding-top: 0.5rem;
  }

  .action-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.7rem 1.25rem;
    border-radius: 999px;
    font-size: 0.85rem;
    font-weight: 600;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.2s ease;
    border: none;
  }

  .action-btn.primary {
    color: #000;
    background: var(--accent-lime);
  }

  .action-btn.primary:hover {
    background: var(--accent-racing);
    color: #fff;
    transform: scale(1.02);
  }

  .action-btn.secondary {
    color: var(--text-primary);
    background: var(--surface-soft);
    border: 1px solid var(--surface-border);
  }

  .action-btn.secondary:hover {
    background: var(--overlay-accent-light);
    border-color: var(--accent-electric);
    color: var(--accent-electric);
  }

  .btn-icon {
    font-size: 1rem;
    line-height: 1;
  }

  /* Full Calendar Container */
  .calendar-wrapper {
    position: relative;
    width: 100%;
    border-radius: var(--radius-md);
    overflow: hidden;
    border: 1px solid var(--surface-border);
    background: var(--surface-soft);
    margin-top: 0.5rem;
    transition: all 0.3s ease;
  }

  .calendar-wrapper.hidden {
    display: none;
  }

  .calendar-wrapper iframe {
    display: block;
    width: 100%;
    min-height: 600px;
    height: 70vh;
    max-width: 100%;
  }

  /* Mobile Responsive */
  @media (max-width: 640px) {
    .event-card {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }

    .event-date {
      flex-direction: row;
      align-items: center;
      gap: 0.75rem;
    }

    .event-type-badge {
      justify-self: start;
    }

    .calendar-actions {
      flex-direction: column;
    }

    .action-btn {
      justify-content: center;
    }

    .calendar-wrapper iframe {
      min-height: 450px;
      height: 60vh;
    }
  }
</style>

<script>
  // Toggle full calendar visibility
  const toggleBtn = document.getElementById('toggle-calendar');
  const fullCalendar = document.getElementById('full-calendar');
  const btnText = toggleBtn?.querySelector('.btn-text');

  toggleBtn?.addEventListener('click', () => {
    const isHidden = fullCalendar?.classList.contains('hidden');

    if (isHidden) {
      fullCalendar?.classList.remove('hidden');
      if (btnText) btnText.textContent = 'Hide Calendar';
      toggleBtn.scrollIntoView({ behavior: 'smooth', block: 'start' });
    } else {
      fullCalendar?.classList.add('hidden');
      if (btnText) btnText.textContent = 'View Full Calendar';
    }
  });
</script>
