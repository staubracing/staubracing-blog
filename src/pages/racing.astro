---
import Layout from '../layouts/Layout.astro';
import { CATEGORY_INFO } from '../content/config';
import BikeCard from '../components/ui/BikeCard.astro';
import SubNav from '../components/SubNav.astro';
import bikesData from '../data/bikes.json';

type BikeStatus = 'ready' | 'maintenance';
---

<Layout title="The Fleet - StaubRacing">
  <SubNav slot="subnav" section="racing" currentPath="/racing" />

  <section class="section-card" style={`--category-color: ${CATEGORY_INFO.racing.color}`}>
    <header class="section-header">
      <span class="category-pill">{CATEGORY_INFO.racing.emoji} {CATEGORY_INFO.racing.title}</span>
      <h1>The Fleet</h1>
      <p>My race bikes and track machines</p>
    </header>

    <div class="stats-row">
      <div class="stat-item">
        <span class="stat-label">Next Race</span>
        <span class="stat-value">2026 Season Opener</span>
      </div>
      <div class="stat-item">
        <span class="stat-label">Current Focus</span>
        <span class="stat-value">Suspension tuning</span>
      </div>
      <div class="stat-item">
        <span class="stat-label">Championship</span>
        <span class="stat-value">7th - Ultralight</span>
      </div>
    </div>

    <section class="bikes-section">
      <div class="bikes-grid">
        {bikesData.bikes.map(bike => (
          <BikeCard
            name={bike.name}
            image={bike.image}
            engine={bike.engine}
            power={bike.power}
            weight={bike.weight}
            status={bike.status as BikeStatus}
            statusText={bike.statusText}
          />
        ))}
      </div>
    </section>
  </section>
</Layout>

<style>
  .section-card {
    display: grid;
    gap: 1.75rem;
    padding: clamp(1.75rem, 2.5vw, 2.75rem);
    background: var(--surface-solid);
    border-radius: var(--radius-lg);
    border: 1px solid var(--surface-border);
    box-shadow: var(--shadow-soft);
    backdrop-filter: blur(16px);
  }

  .section-header {
    display: grid;
    gap: 0.8rem;
    text-align: center;
  }

  .section-header h1 {
    font-size: clamp(2.3rem, 5vw, 3.1rem);
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  .section-header p {
    margin: 0;
    color: var(--text-secondary);
  }

  .section-header .category-pill {
    justify-self: center;
  }

  .stats-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1rem;
    padding: 1.25rem;
    padding-left: calc(1.25rem + 3px);
    background: linear-gradient(155deg, color-mix(in srgb, var(--category-color) 8%, transparent), var(--overlay-base-light));
    border-radius: var(--radius-md);
    border: 1px solid color-mix(in srgb, var(--category-color) 20%, var(--surface-border));
    border-left: 3px solid var(--accent-lime);
  }

  .stat-item {
    display: grid;
    gap: 0.35rem;
    text-align: center;
  }

  .stat-label {
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--text-secondary);
  }

  .stat-value {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .bikes-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  }

  @media (max-width: 768px) {
    .stats-row {
      grid-template-columns: 1fr;
    }
  }
</style>
