---
import Layout from '../layouts/Layout.astro';
import SubNav from '../components/SubNav.astro';
import MaintenanceList from '../components/ui/MaintenanceList.astro';
import maintenanceData from '../data/maintenance.json';
---

<Layout title="Bike Maintenance | StaubRacing">
  <SubNav slot="subnav" section="racing" currentPath="/maintenance" />

  <section class="maintenance-section">
    <header class="section-header">
      <span class="category-pill">üèÅ Racing</span>
      <h1>Bike Maintenance</h1>
      <p>Track day and race prep items for the fleet. Priority indicates urgency.</p>
    </header>

    <div class="last-updated">
      Last updated: {maintenanceData.lastUpdated}
    </div>

    {maintenanceData.items.length > 0 ? (
      <MaintenanceList items={maintenanceData.items} />
    ) : (
      <p class="empty-state">No maintenance items. The fleet is ready to roll!</p>
    )}

    <div class="maintenance-info">
      <h2>Priority Guide</h2>
      <ul>
        <li><span class="priority-high">‚óè</span> High ‚Äî Needs attention before next ride</li>
        <li><span class="priority-medium">‚óè</span> Medium ‚Äî Schedule soon</li>
        <li><span class="priority-low">‚óè</span> Low ‚Äî When convenient</li>
      </ul>
    </div>
  </section>
</Layout>

<style>
  .maintenance-section {
    display: grid;
    gap: 1.75rem;
    padding: clamp(1.75rem, 2.5vw, 2.75rem);
    background: var(--surface-solid);
    border-radius: var(--radius-lg);
    border: 1px solid var(--surface-border);
    box-shadow: var(--shadow-soft);
    backdrop-filter: blur(16px);
  }

  .section-header {
    display: grid;
    gap: 0.8rem;
    text-align: center;
  }

  .section-header h1 {
    font-size: clamp(2.3rem, 5vw, 3.1rem);
    letter-spacing: 0.08em;
    text-transform: uppercase;
    margin: 0;
  }

  .section-header p {
    margin: 0;
    color: var(--text-secondary);
  }

  .section-header .category-pill {
    justify-self: center;
  }

  .category-pill {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, color-mix(in srgb, var(--accent-racing) 15%, transparent), transparent);
    border: 1px solid color-mix(in srgb, var(--accent-racing) 40%, var(--surface-border));
    border-radius: 999px;
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--accent-lime);
  }

  .last-updated {
    text-align: center;
    font-size: 0.8rem;
    color: var(--text-secondary);
    letter-spacing: 0.05em;
  }

  .empty-state {
    text-align: center;
    color: var(--text-secondary);
    padding: 2rem;
    margin: 0;
  }

  .maintenance-info {
    padding: 1.25rem;
    background: linear-gradient(155deg, color-mix(in srgb, var(--accent-racing) 8%, transparent), var(--overlay-base-light));
    border-radius: var(--radius-md);
    border: 1px solid color-mix(in srgb, var(--accent-racing) 20%, var(--surface-border));
  }

  .maintenance-info h2 {
    margin: 0 0 0.75rem;
    font-size: 1.1rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--text-primary);
  }

  .maintenance-info ul {
    margin: 0;
    padding: 0;
    list-style: none;
    display: grid;
    gap: 0.5rem;
  }

  .maintenance-info li {
    font-size: 0.9rem;
    color: var(--text-secondary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .priority-high {
    color: #ef4444;
  }

  .priority-medium {
    color: #f59e0b;
  }

  .priority-low {
    color: #22c55e;
  }
</style>
