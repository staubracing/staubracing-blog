---
import Layout from '../layouts/Layout.astro';
import linksData from '../data/links.json';
---

<Layout title="Links - StaubRacing">
  <section class="section-card">
    <header class="section-header">
      <h1>Links</h1>
      <p>Useful resources, tools, and places I hang out online.</p>
    </header>

    <div class="links-grid">
      {linksData.categories.map(category => (
        <section class="link-category">
          <h2>
            <span class="category-emoji">{category.emoji}</span>
            {category.name}
          </h2>
          <div class="category-links">
            {category.links.map(link => (
              <a href={link.url} target="_blank" rel="noreferrer" class="link-card">
                <div class="link-content">
                  <h3>{link.title}</h3>
                  <p>{link.description}</p>
                </div>
                <span class="link-arrow">â†—</span>
              </a>
            ))}
          </div>
        </section>
      ))}
    </div>
  </section>
</Layout>

<style>
  .section-card {
    display: grid;
    gap: 1.75rem;
    padding: clamp(1.75rem, 2.5vw, 2.75rem);
    background: var(--surface-solid);
    border-radius: var(--radius-lg);
    border: 1px solid var(--surface-border);
    box-shadow: var(--shadow-soft);
    backdrop-filter: blur(16px);
  }

  .section-header {
    display: grid;
    gap: 0.8rem;
    text-align: center;
  }

  .section-header h1 {
    font-size: clamp(2.3rem, 5vw, 3.1rem);
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  .section-header p {
    margin: 0;
    color: var(--text-secondary);
  }

  .links-grid {
    display: grid;
    gap: 2rem;
  }

  .link-category h2 {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0 0 1rem;
    font-size: 1.25rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--surface-border);
  }

  .category-emoji {
    font-size: 1.5rem;
  }

  .category-links {
    display: grid;
    gap: 0.75rem;
  }

  .link-card {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 1rem;
    align-items: center;
    padding: 1rem 1.25rem;
    border-radius: var(--radius-md);
    border: 1px solid var(--surface-border);
    background: var(--overlay-base-light);
    color: var(--text-primary);
    text-decoration: none;
    transition: border 0.2s ease, transform 0.2s ease, background 0.2s ease;
  }

  .link-card:hover,
  .link-card:focus-visible {
    border-color: var(--accent-electric);
    background: var(--overlay-accent-light);
    transform: translateY(-2px);
  }

  .link-content h3 {
    margin: 0;
    font-size: 1rem;
  }

  .link-content p {
    margin: 0.25rem 0 0;
    font-size: 0.85rem;
    color: var(--text-secondary);
  }

  .link-arrow {
    font-size: 1.1rem;
    color: var(--text-secondary);
    transition: transform 0.2s ease, color 0.2s ease;
  }

  .link-card:hover .link-arrow {
    transform: translate(3px, -3px);
    color: var(--accent-electric);
  }

  @media (max-width: 768px) {
    .link-card {
      padding: 0.85rem 1rem;
    }

    .link-content h3 {
      font-size: 0.95rem;
    }
  }
</style>
