---
import ThemeToggle from '../components/ThemeToggle.astro';
import '../styles/theme.css';
import '../styles/global.css';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="dark light" />
    <title>{title}</title>

    <!-- Favicons -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-profile-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Open Graph / Social -->
    <meta name="description" content="Staub Racing - Motorcycle racing, coding projects, DIY builds, and life updates. Follow the journey at staubracing.com." />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Motorcycle racing, coding projects, DIY builds, and life updates." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://staubracing.com" />
    <meta property="og:image" content="/images/brand/logo.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@StaubRacing106" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Racing+Sans+One&family=Roboto:wght@400;700&family=Space+Grotesk:wght@500;600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="background" aria-hidden="true"></div>

    <header class="site-header">
      <a class="brand" href="/">
        <span class="brand-primary">Staub</span>
        <span class="brand-secondary">Racing</span>
      </a>
      <nav class="site-nav" aria-label="Primary navigation">
        <a href="/">Home</a>
        <a href="/racing">Racing</a>
        <a href="/projects">Projects</a>
        <a href="/code">Code</a>
        <a href="/life">Life</a>
        <a href="/contact">Contact</a>
        <ThemeToggle />
      </nav>
    </header>

    <main class="page-shell">
      <slot />
    </main>

    <footer class="site-footer">
      <p>
        © {new Date().getFullYear()} Staub Racing<br />
        Created by Christopher Staub · Edited (and improved) by Michael T. Smith<br />
        No bullshit. Just bikes, builds, and bytes.
      </p>
    </footer>

    <script is:inline>
      // Theme initialization - runs immediately to prevent flash
      // Supports: 'light', 'dark', or 'system' preference
      (function() {
        function getSystemTheme() {
          return window.matchMedia('(prefers-color-scheme: light)').matches ? 'light' : 'dark';
        }

        function getEffectiveTheme(preference) {
          if (preference === 'system' || !preference) {
            return getSystemTheme();
          }
          return preference;
        }

        function setTheme(theme) {
          document.documentElement.setAttribute('data-theme', theme);
        }

        function savePreference(preference) {
          localStorage.setItem('theme-preference', preference);
        }

        function getStoredPreference() {
          return localStorage.getItem('theme-preference') || 'system';
        }

        // Initialize immediately
        const preference = getStoredPreference();
        const effectiveTheme = getEffectiveTheme(preference);
        setTheme(effectiveTheme);

        // Listen for preference changes from toggle
        document.addEventListener('theme-preference-change', (e) => {
          const newPreference = e.detail.preference;
          savePreference(newPreference);
          setTheme(getEffectiveTheme(newPreference));

          // Notify toggle component
          document.dispatchEvent(new CustomEvent('theme-preference-changed', {
            detail: { preference: newPreference }
          }));
        });

        // Listen for system preference changes (only if user has 'system' selected)
        window.matchMedia('(prefers-color-scheme: light)').addEventListener('change', () => {
          const currentPreference = getStoredPreference();
          if (currentPreference === 'system') {
            setTheme(getSystemTheme());
          }
        });
      })();
    </script>
  </body>
</html>

<style>
  /* ============================================
     LAYOUT-SPECIFIC STYLES
     Global styles are in src/styles/global.css
     Theme variables are in src/styles/theme.css
     ============================================ */

  .background {
    position: fixed;
    inset: 0;
    background:
      var(--bg-highlight-1),
      var(--bg-highlight-2),
      var(--bg-overlay);
    z-index: -2;
  }

  .site-header {
    position: sticky;
    top: 1.25rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    max-width: var(--layout-max);
    margin: 1.25rem auto;
    padding: 1rem 1.5rem;
    border-radius: var(--radius-md);
    background: var(--surface-solid);
    border: 1px solid var(--surface-border);
    backdrop-filter: blur(16px);
    box-shadow: var(--shadow-soft);
    z-index: 5;
  }

  .brand {
    display: inline-flex;
    align-items: baseline;
    gap: 0.35rem;
    text-decoration: none;
    font-family: var(--brand-font);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 1.15rem;
    font-weight: 700;
    transition: opacity 0.2s ease;
  }

  .brand:hover {
    opacity: 0.85;
  }

  .brand-primary {
    color: var(--accent-racing);
    font-weight: 800;
  }

  .brand-secondary {
    color: var(--text-primary);
    font-weight: 700;
  }

  .site-nav {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .site-nav a {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1.1rem;
    border-radius: 999px;
    border: 1px solid var(--surface-border);
    background: var(--surface-soft);
    color: var(--text-primary);
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .site-nav a:hover,
  .site-nav a:focus-visible {
    background: var(--overlay-accent-hover);
    border-color: color-mix(in srgb, var(--accent-electric) 50%, var(--accent-lime));
    color: var(--text-primary);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px -4px rgba(102, 187, 106, 0.25), 0 4px 12px -4px rgba(56, 189, 248, 0.2);
  }

  .page-shell {
    position: relative;
    max-width: var(--layout-max);
    margin: 0 auto;
    padding: 2rem 0 6rem;
    display: grid;
    gap: 2rem;
  }

  .site-footer {
    max-width: var(--layout-max);
    margin: 0 auto 2.5rem;
    padding: 1.5rem 1.75rem;
    border-radius: var(--radius-md);
    background: var(--surface-solid);
    border: 1px solid var(--surface-border);
    border-top-color: color-mix(in srgb, var(--accent-lime) 40%, var(--surface-border));
    text-align: center;
    font-size: 0.85rem;
    color: var(--text-secondary);
    backdrop-filter: blur(16px);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {

    .site-header {
      flex-direction: column;
      align-items: flex-start;
      position: static;
      margin-top: 1.5rem;
    }

    .site-nav {
      width: 100%;
      justify-content: flex-start;
    }

    .page-shell {
      padding-top: 1rem;
      gap: 1.5rem;
    }
  }
</style>
