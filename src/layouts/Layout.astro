---
import ThemeToggle from '../components/ThemeToggle.astro';
import '../styles/theme.css';
import '../styles/global.css';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="dark light" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Racing+Sans+One&family=Roboto:wght@400;700&family=Space+Grotesk:wght@500;600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="background" aria-hidden="true"></div>

    <header class="site-header">
      <a class="brand" href="/">
        <span class="brand-primary">Staub</span>
        <span class="brand-secondary">Racing</span>
      </a>
      <nav class="site-nav" aria-label="Primary navigation">
        <a href="/">Home</a>
        <a href="/category/racing">Racing</a>
        <a href="/category/projects">Projects</a>
        <a href="/category/code">Code</a>
        <a href="/category/life">Life</a>
        <a href="https://staubracing.com/#contact" rel="noreferrer" target="_blank">Contact</a>
        <ThemeToggle />
      </nav>
    </header>

    <main class="page-shell">
      <slot />
    </main>

    <footer class="site-footer">
      <p>
        © {new Date().getFullYear()} Staub Racing<br />
        Created by Christopher Staub · Edited (and improved) by Michael T. Smith<br />
        No bullshit. Just bikes, builds, and bytes.
      </p>
    </footer>

    <script is:inline>
      // Theme initialization - runs immediately to prevent flash
      (function() {
        function getPreferredTheme() {
          // Check localStorage first
          const stored = localStorage.getItem('theme');
          if (stored === 'light' || stored === 'dark') {
            return stored;
          }
          
          // Fall back to system preference
          if (window.matchMedia('(prefers-color-scheme: light)').matches) {
            return 'light';
          }
          
          // Default to dark
          return 'dark';
        }

        function setTheme(theme) {
          document.documentElement.setAttribute('data-theme', theme);
          localStorage.setItem('theme', theme);
          
          // Notify components that theme has changed
          document.dispatchEvent(new CustomEvent('theme-changed', { 
            detail: { theme } 
          }));
        }

        // Apply theme immediately
        const theme = getPreferredTheme();
        setTheme(theme);

        // Listen for toggle clicks
        document.addEventListener('theme-change', (e) => {
          setTheme(e.detail.theme);
        });

        // Listen for system preference changes
        window.matchMedia('(prefers-color-scheme: light)').addEventListener('change', (e) => {
          // Only auto-switch if user hasn't manually set a preference
          if (!localStorage.getItem('theme')) {
            setTheme(e.matches ? 'light' : 'dark');
          }
        });
      })();
    </script>
  </body>
</html>

<style>
  /* ============================================
     LAYOUT-SPECIFIC STYLES
     Global styles are in src/styles/global.css
     Theme variables are in src/styles/theme.css
     ============================================ */

  .background {
    position: fixed;
    inset: 0;
    background:
      var(--bg-highlight-1),
      var(--bg-highlight-2),
      var(--bg-overlay);
    z-index: -2;
  }

  .site-header {
    position: sticky;
    top: 1.25rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    max-width: var(--layout-max);
    margin: 1.25rem auto;
    padding: 1rem 1.5rem;
    border-radius: var(--radius-md);
    background: var(--surface-solid);
    border: 1px solid var(--surface-border);
    backdrop-filter: blur(16px);
    box-shadow: var(--shadow-soft);
    z-index: 5;
  }

  .brand {
    display: inline-flex;
    align-items: baseline;
    gap: 0.35rem;
    text-decoration: none;
    font-family: var(--brand-font);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 1.15rem;
    font-weight: 700;
    transition: opacity 0.2s ease;
  }

  .brand:hover {
    opacity: 0.85;
  }

  .brand-primary {
    color: var(--accent-racing);
    font-weight: 800;
  }

  .brand-secondary {
    color: var(--text-primary);
    font-weight: 700;
  }

  .site-nav {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .site-nav a {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1.1rem;
    border-radius: 999px;
    border: 1px solid var(--surface-border);
    background: var(--surface-soft);
    color: var(--text-primary);
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .site-nav a:hover,
  .site-nav a:focus-visible {
    background: var(--overlay-accent-hover);
    border-color: var(--accent-electric);
    color: var(--text-primary);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px -4px rgba(56, 189, 248, 0.3);
  }

  .page-shell {
    position: relative;
    max-width: var(--layout-max);
    margin: 0 auto;
    padding: 2rem 0 6rem;
    display: grid;
    gap: 2rem;
  }

  .site-footer {
    max-width: var(--layout-max);
    margin: 0 auto 2.5rem;
    padding: 1.5rem 1.75rem;
    border-radius: var(--radius-md);
    background: var(--surface-solid);
    border: 1px solid var(--surface-border);
    text-align: center;
    font-size: 0.85rem;
    color: var(--text-secondary);
    backdrop-filter: blur(16px);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {

    .site-header {
      flex-direction: column;
      align-items: flex-start;
      position: static;
      margin-top: 1.5rem;
    }

    .site-nav {
      width: 100%;
      justify-content: flex-start;
    }

    .page-shell {
      padding-top: 1rem;
      gap: 1.5rem;
    }
  }
</style>
